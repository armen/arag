<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name><variable>DATABASE_NAME</variable></name>
    <table>
        <name><variable>TABLES_PREFIX</variable>multisite_databases</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <default>0</default>
                <autoincrement>true</autoincrement>
            </field>
            <field>
                <name>name</name>
                <type>text</type>
                <length>255</length>
            </field>
            <field>
                <name>username</name>
                <type>text</type>
                <length>255</length>
            </field>
            <field>
                <name>password</name>
                <type>text</type>
                <length>255</length>
            </field>
            <field>
                <name>hostspec</name>
                <type>text</type>
                <length>255</length>
            </field>
            <field>
                <name>phptype</name>
                <type>text</type>
                <length>255</length>
            </field>
            <field>
                <name>dbsyntax</name>
                <type>text</type>
                <length>255</length>
            </field>
            <field>
                <name>port</name>
                <type>text</type>
                <length>10</length>
            </field>
            <index>
                <name>primary</name>
                <primary>true</primary>
                <field>
                    <name>id</name>
                </field>
            </index>
        </declaration>
    </table>
</database>
